from typing import Any, Callable, Sequence


class Dataset:
    def __len__(self) -> int: ...
    def __getitem__(self, key: Any) -> Any: ...
    def map(self, function: Callable[..., Any], *args: Any, **kwargs: Any) -> "Dataset": ...
    def shuffle(self, *args: Any, **kwargs: Any) -> "Dataset": ...
    def select(self, indices: Sequence[int], *args: Any, **kwargs: Any) -> "Dataset": ...
    def select_columns(self, columns: Sequence[str], *args: Any, **kwargs: Any) -> "Dataset": ...
    def train_test_split(self, *args: Any, **kwargs: Any) -> "DatasetDict": ...
    def to_list(self) -> list[Any]: ...


class DatasetDict(dict[str, Dataset]):
    pass


def load_dataset(
    path: str,
    name: str | None = ...,
    *,
    split: str | None = ...,
    **kwargs: Any,
) -> Dataset: ...


def load_from_disk(path: str, **kwargs: Any) -> Dataset | DatasetDict: ...
